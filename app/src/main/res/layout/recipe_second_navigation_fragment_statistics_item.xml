<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            style="@style/best_meal_linear_layout_vertical"
            tools:layout_editor_absoluteY="246dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle_Approved"
                    style="@style/best_meal_title_short"
                    android:text="@string/label_approved"
                    tools:layout_editor_absoluteY="246dp" />

                <TextView
                    android:id="@+id/textViewValue_Approved"
                    style="@style/best_meal_value_long"
                    android:text="@string/layout_fake_value_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle_Reproved"
                    style="@style/best_meal_title_short"
                    android:text="@string/label_reproved" />

                <TextView
                    android:id="@+id/textViewValue_Reproved"
                    style="@style/best_meal_value_long"
                    android:text="@string/layout_fake_value_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle_Liked"
                    style="@style/best_meal_title_short"
                    android:text="@string/label_liked" />

                <TextView
                    android:id="@+id/textViewValue_Liked"
                    style="@style/best_meal_value_long"
                    android:text="@string/layout_fake_value_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle_Disliked"
                    style="@style/best_meal_title_short"
                    android:text="@string/label_disliked" />

                <TextView
                    android:id="@+id/textViewValue_Disliked"
                    style="@style/best_meal_value_long"
                    android:text="@string/layout_fake_value_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle_Printed"
                    style="@style/best_meal_title_short"
                    android:text="@string/label_printed" />

                <TextView
                    android:id="@+id/textViewValue_Printed"
                    style="@style/best_meal_value_long"
                    android:text="@string/layout_fake_value_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle_Shared"
                    style="@style/best_meal_title_short"
                    android:text="@string/label_shared" />

                <TextView
                    android:id="@+id/textViewValue_Shared"
                    style="@style/best_meal_value_long"
                    android:text="@string/layout_fake_value_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle_Commented"
                    style="@style/best_meal_title_short"
                    android:text="@string/label_commented" />

                <TextView
                    android:id="@+id/textViewValue_Commented"
                    style="@style/best_meal_value_long"
                    android:text="@string/layout_fake_value_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle_Visualized"
                    style="@style/best_meal_title_short"
                    android:text="@string/label_visualized" />

                <TextView
                    android:id="@+id/textViewValue_Visualized"
                    style="@style/best_meal_value_long"
                    android:text="@string/layout_fake_value_10" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
